{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node", "@cucumber/cucumber", "@playwright/test"]
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["./**/*.ts"]
}